{
  "name": "@community-lending/backend",
  "version": "1.0.0",
  "description": "Node.js backend API for community P2P lending platform",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.0",
    "zod": "^3.21.0",
    "prisma": "^5.0.0",
    "@prisma/client": "^5.0.0",
    "redis": "^4.6.0",
    "axios": "^1.4.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.0",
    "@anthropic-ai/sdk": "^0.4.0",
    "node-cron": "^3.0.0",
    "multer": "^1.4.0",
    "joi": "^17.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/node": "^20.4.0",
    "@types/multer": "^1.4.0",
    "@types/node-cron": "^3.0.0",
    "tsx": "^3.12.0",
    "vitest": "^0.33.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0"
  }
}
