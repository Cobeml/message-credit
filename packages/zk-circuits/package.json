{
  "name": "@community-lending/zk-circuits",
  "version": "1.0.0",
  "description": "Halo2 zero-knowledge proof circuits for privacy-preserving verification",
  "private": true,
  "scripts": {
    "build": "cargo build --release",
    "test": "cargo test",
    "bench": "cargo bench",
    "lint": "cargo clippy -- -D warnings",
    "format": "cargo fmt",
    "build-node": "napi build --platform --release",
    "test-node": "mocha tests/ffi_integration.test.js"
  },
  "dependencies": {
    "@napi-rs/cli": "^2.16.0"
  },
  "devDependencies": {
    "vitest": "^0.33.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.7"
  },
  "napi": {
    "name": "zk-circuits",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc"
      ]
    }
  }
}
